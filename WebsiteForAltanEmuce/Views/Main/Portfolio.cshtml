@using WebsiteForAltanEmuce.Models.EntityFramework;
@model List<Portfolio>

<div id="portfolio">
    <div class="container-fluid p-0">
        <div class="row g-0">
            @foreach (var portfolio in Model)
            {
            <div class="col-lg-4 col-sm-6">
                <a class="portfolio-box" href=@portfolio.Portfoliopic title="">
                    <img class="img-fluid" src=@portfolio.Portfoliopic alt="..." />
                    <div class="portfolio-box-caption">
                        <div class="project-category text-white-50">Kategori</div>
                        <div class="project-name">@portfolio.Portfolioname</div>
                    </div>
                </a>
            </div>  
            }
        </div>
    </div>
</div>