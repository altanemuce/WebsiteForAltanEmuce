@using WebsiteForAltanEmuce.Models.EntityFramework
@model List<About>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<body class="bg-gradient-primary">

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Hakkımda Düzenle </h1>
                            </div>
                            <form class="user" method="post">
                                @foreach (var about in Model)
                                {
                                    <div class="form-group row">
                                        <div class="col-sm-6 mb-3 mb-sm-0">
                                            <input type="text" class="form-control form-control-user" value="@about.Aboutid" name="Aboutid" id="exampleFirstName"
                                                   placeholder="Eğitimi Veren Kişi">
                                        </div>

                                    </div>
                                    <div class="form-group">
                                        <input type="text" class="form-control form-control-user" name="Abouttitle" value="@about.Abouttitle" id="exampleInputEmail"
                                               placeholder="Sertifika Linki">
                                    </div>
                                    <div class="form-group">
                                        <input type="text" class="form-control form-control-user" name="Abouttext" value="@about.Abouttext" id="exampleInputEmail"
                                               placeholder="Sertifika Linki">
                                    </div>

                                    <button class="btn btn-primary btn-user btn-block">Güncelle</button>
                                    <hr>
                                }
                            </form>
                            <hr>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>

</body>