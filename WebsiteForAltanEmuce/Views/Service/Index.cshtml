@using WebsiteForAltanEmuce.Models.EntityFramework
@model List<Service>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Servisler</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Hizmet Alanı</th>
                        <th>Kullanılanacak Dil</th>
                        <th>Sil</th>
                        <th>Düzenle </th>
                        <th></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Id</th>
                        <th>Hizmet Alanı</th>
                        <th>Kullanılanacak Dil</th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var service in Model)
                    {
                        <tr>
                            <td>@service.Serviceid</td>
                            <td>@service.Servicesubtitle</td>
                            <td>@service.Servicetext</td>
                            <td>  <a href="/Service/DeleteService/@service.Serviceid" class="btn btn-danger btn-sm">Sil</a></td>
                            <td><a href="/Service/GetService/@service.Serviceid" class="btn btn-warning btn-sm">Düzenle</a></td>
                            <td></td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
        <a href="/Service/AddService/" class="btn btn-primary btn-lg">Yeni Hizmet Ekle</a>
    </div>

</div>




